<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/userButton"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="ユーザー"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/memo_view_Button"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:text="メモ表示"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_import_Button" />

    <Button
        android:id="@+id/memo_import_Button"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:text="新規メモ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userButton" />

    <Button
        android:id="@+id/delete_Button"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:text="DB削除"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_view_Button"
        tools:ignore="MissingConstraints" />

